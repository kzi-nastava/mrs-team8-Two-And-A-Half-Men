<?xml version="1.0" encoding="utf-8"?>
<!-- bg_button_outline_accent.xml -->
<!-- Outlined "Edit Price" button with accent color border, matching web style -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C8A80022" />
            <stroke android:width="1.5dp" android:color="#C8A800" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.5dp" android:color="#4D4D00" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.5dp" android:color="#C8A800" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
