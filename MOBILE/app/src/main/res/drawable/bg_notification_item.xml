<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unread (selected) state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/notification_unread_bg"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/button_primary"/>
        </shape>
    </item>
    <!-- Read (normal) state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/notification_read_bg"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/secondary_green"/>
        </shape>
    </item>
</selector>
