<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_a_rate"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white"
            android:contentDescription="@string/close" />
    </RelativeLayout>

    <!-- Driver Rating Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/driver_stars_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@drawable/rouded_edittext">

        <ImageView
            android:id="@+id/driver_star_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 1" />

        <ImageView
            android:id="@+id/driver_star_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 2" />

        <ImageView
            android:id="@+id/driver_star_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 3" />

        <ImageView
            android:id="@+id/driver_star_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 4" />

        <ImageView
            android:id="@+id/driver_star_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 5" />
    </LinearLayout>

    <!-- Vehicle Rating Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/vehicle_stars_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@drawable/rouded_edittext">

        <ImageView
            android:id="@+id/vehicle_star_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 1" />

        <ImageView
            android:id="@+id/vehicle_star_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 2" />

        <ImageView
            android:id="@+id/vehicle_star_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 3" />

        <ImageView
            android:id="@+id/vehicle_star_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 4" />

        <ImageView
            android:id="@+id/vehicle_star_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_big_off"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="Star 5" />
    </LinearLayout>
    <!-- Additional Comment Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional comment"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Type text..."
        android:textColorHint="@color/accent"
        android:textColor="@android:color/white"
        android:background="@drawable/rouded_edittext"
        android:padding="12dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="5" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rouded_edittext"
        android:layout_marginTop="16dp" />

</LinearLayout>