<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/profile_background"
    android:padding="@dimen/spacing_large">

    <!-- Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_large">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_vehicle_pricing"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_vehicle_pricing_desc"
                android:textColor="@color/label_text"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_refresh"
            android:textColor="@color/button_text"
            android:background="@drawable/bg_button_primary"
            android:paddingStart="@dimen/button_padding_horizontal"
            android:paddingEnd="@dimen/button_padding_horizontal"/>
    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_large"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/pricing_accent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_vehicle_types"
            android:textColor="@color/label_text"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/spacing_medium"/>
    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_large"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_danger"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_retry"
            android:textColor="@color/button_text"
            android:background="@drawable/bg_button_primary"
            android:paddingStart="@dimen/button_padding_horizontal"
            android:paddingEnd="@dimen/button_padding_horizontal"/>
    </LinearLayout>

    <!-- Content: RecyclerView grid -->
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_vehicle_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>
    </LinearLayout>

</LinearLayout>