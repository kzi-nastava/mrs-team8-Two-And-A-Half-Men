<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/primary"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Route with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="ðŸ“"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txt_route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sajam Å½elezniÄka Medicinski"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Driver info -->
        <TextView
            android:id="@+id/txt_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver: Mike Driver"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <!-- Status info -->
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: ACTIVE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Schedule time -->
        <TextView
            android:id="@+id/txt_scheduled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled: Immediate"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>