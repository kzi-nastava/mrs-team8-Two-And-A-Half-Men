<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1a5c3a"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Start Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_start_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start address"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="2" />

        </LinearLayout>

        <!-- Stops (if any) -->
        <TextView
            android:id="@+id/tv_stops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 stops"
            android:textColor="#d4af37"
            android:textSize="13sp"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- End Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_end_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End address"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="2" />

        </LinearLayout>

        <!-- Select Button -->
        <Button
            android:id="@+id/btn_select_route"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Route"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:background="@drawable/btn_select_route" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
