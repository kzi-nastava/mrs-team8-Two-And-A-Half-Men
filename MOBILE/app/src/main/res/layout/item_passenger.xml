<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_passenger_item"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_passenger_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="passenger@email.com"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:paddingEnd="12dp" />

    <ImageButton
        android:id="@+id/btn_remove_passenger"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_remove_button"
        android:src="@drawable/ic_close"
        android:contentDescription="Remove passenger"
        android:tint="@android:color/white" />

</LinearLayout>
