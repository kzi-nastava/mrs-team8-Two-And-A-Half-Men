<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#3E7A52"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User: user@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Time Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/scheduled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scheduled:\n10.01.2024 14:20"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:id="@+id/started"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Started:\n10.01.2024 14:30"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/ended"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ended:\n10.01.2024 15:15"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Bottom Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status: COMPLETED"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 2500 RSD"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passengers: 1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>