<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_default"
    android:padding="@dimen/card_padding"
    android:layout_margin="6dp">

    <!-- Vehicle Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium">

        <!-- Vehicle Icon -->
        <TextView
            android:id="@+id/tv_vehicle_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:textSize="28sp"
            android:background="@drawable/bg_icon_container"
            android:layout_marginEnd="@dimen/spacing_medium"/>

        <!-- Vehicle Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pricing_accent"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_vehicle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_text"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- VIEW MODE -->
    <LinearLayout
        android:id="@+id/layout_view_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Price Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_price"
                android:textColor="@color/label_text"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_price"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Edit Price Button -->
        <Button
            android:id="@+id/btn_edit_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/btn_edit_price"
            android:textColor="@color/pricing_accent"
            android:background="@drawable/bg_button_outline_accent"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <!-- EDIT MODE -->
    <LinearLayout
        android:id="@+id/layout_edit_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pricing_accent_dim"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_price"
            android:textColor="@color/pricing_accent"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:background="@drawable/bg_input_dark"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_large"
            android:padding="@dimen/input_padding"
            android:inputType="numberDecimal"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:autofillHints=""/>

        <!-- Save / Cancel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/btn_save"
                android:textColor="@color/button_text"
                android:background="@drawable/bg_button_primary"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/btn_cancel"
                android:textColor="@color/button_danger"
                android:background="@color/black"
                android:layout_marginStart="4dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>