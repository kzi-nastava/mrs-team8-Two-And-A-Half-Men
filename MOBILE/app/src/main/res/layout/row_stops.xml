<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/primary"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Move Up/Down Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <!-- Move Up Button -->
        <ImageButton
            android:id="@+id/btn_move_up"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/arrow_up_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/move_up"
            android:padding="4dp" />

        <!-- Move Down Button -->
        <ImageButton
            android:id="@+id/btn_move_down"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/arrow_down_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/move_down"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Stop Letter Label -->
    <TextView
        android:id="@+id/txt_stop_label"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:background="@color/accent"
        android:backgroundTint="@color/accent"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="A" />

    <!-- Stop Address -->
    <TextView
        android:id="@+id/txt_stop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="2" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btn_delete_stop"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete_stop"
        app:tint="@color/error_red" />

</LinearLayout>